{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "out",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "rootDir": "src",
        /* Strict Type-Checking Option */
        "strict": false,   /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true, /* Report errors on unused locals. */
        "removeComments": false,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "pretty": false,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}