{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "rootDir": "src",
        /* Strict Type-Checking Option */
        "strict": false,   /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true, /* Report errors on unused locals. */
        "removeComments": false,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "pretty": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}